<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigWhiteTextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalWhiteTabTextView">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ToolBarWhiteTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="bottom_tab_indicator">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NormalTextView">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BigTextView">

        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="NormalButtonView">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
